<% if(is_author) {%>
<ul class="comment-tools pull-right">
    <li><button class="btn btn-link js-edit-comment" title="<%= __('diamante_front.comment.template.button.edit') %>"><i class="fa fa-pencil"></i></button></li>
    <li><button class="btn btn-link js-delete-comment" title="<%= __('diamante_front.comment.template.button.delete') %>"><i class="fa fa-times"></i></button></li>
</ul>
<% } %>
<img src="<%= avatar_url %>"
     class="comment-author-image"
     alt="<%= author_name %>" />
<strong class="commment-author-name">
    <%= author_name  %>
</strong>
<span> answered <%= created_relative %> <small class="comment-date">(<%= created_at %>)</small> </span>
<div class="comment-content"><%= content %></div>
<% if(attachments && attachments.length) { %>
<% attachments = _.sortBy(attachments, 'thumbnails'); %>
<div class="comment-attachments-block">
  <ul class="comment-attachments">
    <% _.each(attachments, function(attachment){ %>
      <li>
        <a href="<%= attachment.file.url %>" title="Download: <%= attachment.file.filename %>">
          <% if(attachment.thumbnails) { %>
            <span class="media">
                <img src="<%= attachment.thumbnails.url %>" title="Preview of <%= attachment.file.filename %>">
            </span>
          <% } %>
          <%= attachment.file.filename %>
        </a>
      </li>
    <% }); %>
  </ul>
</div>
<% } %>