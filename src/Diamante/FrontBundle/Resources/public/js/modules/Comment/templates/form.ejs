<% var isEdit = !!content; %>
<% if(!isEdit){ %>
<h2>Add Comment</h2>
<% } %>
<form action="/" role="form">
    <div class="form-group">
        <textarea class="form-control" name="content" id="comment<%= isEdit? '-edit':''%>-content" rows="4"><%= content %></textarea>
    </div>
    <div id="comment<%= isEdit? '-edit':''%>-attachment"></div>
    <div id="comment<%= isEdit? '-edit':''%>-attachment-drop"></div>
    <div class="comment-form-actions">
        <% if(isEdit){ %>
        <button type="reset" class="btn btn-default js-cancel">Cancel</button>
        <button type="submit" class="btn btn-primary js-submit">Save Changes</button>
        <% } else { %>
        <button type="submit" class="btn btn-primary js-submit">Add Comment</button>
        <% } %>
    </div>
</form>
