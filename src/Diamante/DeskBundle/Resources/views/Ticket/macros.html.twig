{%- macro scrollToDesctiption(id) -%}
    <script type="text/javascript">
        require(['jquery', 'underscore'],
            function ($, _) {
                $('body').on('focusin', function (elem) {
                    var targetId = $(elem.target).attr('id');

                    if (!_.isEmpty(targetId) && targetId == '{{ id }}') {
                        var href = $('#ticketDetails .nav li:last-child a').attr('href'),
                            url = location.href;

                        location.href = href;
                        history.replaceState(null,null,url);
                    }
                });
            });
    </script>
{% endmacro %}
