{%- macro scrollToDesctiption() -%}
    <script type="text/javascript">
        require(['jquery', 'underscore'],
            function ($, _) {
                $('body').on('focusin', function (elem) {
                    var targetId = $(elem.target).attr('id');

                    if (!_.isEmpty(targetId) && (targetId.indexOf('diamante_ticket_form_description') !== -1
                        || targetId.indexOf('diamante_ticket_update_form_description') !== -1)) {
                        var url = location.href;
                        location.href = '#scroll-2-41';
                        history.replaceState(null,null,url);
                    }
                });
            });
    </script>
{% endmacro %}
